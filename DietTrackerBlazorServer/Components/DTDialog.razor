@typeparam TItem


<MudDialog @ref="@_Dialog"
        @bind-IsVisible="_Visible"
        ClassContent="@($"border-t-2 {GetBorderColour()}")">

    <TitleContent>
        @_Title
    </TitleContent>
    <DialogContent>
        @{
            if (ItemFields != null)
            {
                if (_Mode == DialogMode.Add)
                {
                    @ItemFields(new DialogContext(){Item = this._Item, Disabled = false})
                }
                else if (_Mode == DialogMode.Edit)
                {
                    @ItemFields(new DialogContext(){Item = this._Item, Disabled = false})
                }
                else if (_Mode == DialogMode.Delete)
                {
                    @ItemFields(new DialogContext(){Item = this._Item, Disabled = true})
                }
            }

        }
    </DialogContent>
    <DialogActions>
        @if (_Mode == DialogMode.Add)
        {
            <MudButton Color="Color.Success">Add</MudButton>
        }
        else if (_Mode == DialogMode.Edit)
        {
            <MudButton Color="Color.Warning">Save changes</MudButton>
        }
        else if (_Mode == DialogMode.Delete)
        {
            <MudButton Color="Color.Error">Delete</MudButton>
        }

        <MudButton OnClick="@(() => _Visible = false)">Cancel</MudButton>

    </DialogActions>
</MudDialog>

