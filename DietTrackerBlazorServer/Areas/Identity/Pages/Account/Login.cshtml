@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<form id="account" method="post">

    <div class="d-flex justify-center mt-8">
        <div class="dt-panel">
            <div class="d-flex flex-column align-center gap-2">

                <h1>@ViewData["Title"]</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="mud-error-text"></div>
                <div class="dt-input-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="dt-input" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="mud-error-text"></span>
                </div>

                <div class="dt-input-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="dt-input" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="mud-error-text"></span>
                </div>

                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg">Log in</button>
                <p class="mt-4">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
