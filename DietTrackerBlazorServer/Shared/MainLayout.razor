@using Microsoft.AspNetCore.Identity
@inherits LayoutComponentBase


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        Health Tracker
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <MudNavMenu>
            <MudNavLink Href="/">Dashboard</MudNavLink>
            <MudNavLink Href="/HealthMetrics">Edit metrics</MudNavLink>
            <MudNavGroup Title="Stats" Expanded="true">
                <MudNavLink Href="/Stats">Users</MudNavLink>
                <MudNavLink Href="/HealthDataPoints">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about">About</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
